<%= render "shared/search_form" %>

<h3>検索結果</h3>
<p>件数：<%= @rooms.count %>件</p>
<div class="room-grid">
<% @rooms.each do |room| %>
  <div class="room-grid-item bg-light">
    <% if room.image.attached? %>
      <%= image_tag room.image, class: "grid-image" %>
    <% else %>
      <%= image_tag 'default-image.png', class:"grid-image" %>
    <% end %>
    <p class="h4"><%= room.name %></p>
    <p class="text-secondary"><%= room.address %></p>
    <%= room.introduction.truncate(30) %>
    <p>¥<%= room.price.to_s(:delimited) %></p>
    <%= link_to"詳細はこちら", room, class: "btn btn-primary w-100 py-3" %>
  </div>
<% end %>
</div>