<h3>施設一覧</h3>
<table>
  <tr>
    <th>施設名</th>
    <th>施設紹介</th>
    <th>料金</th>
    <th>住所</th>
    <th>画像</th>
    <th>詳細</th>
  </tr>
  <% @rooms.each do |room| %>
    <tr>
      <td><%= room.name %></td>
      <td><%= room.introduction %></td>
      <td><%= room.price %></td>
      <td><%= room.address %></td>
      <td>
        <% if room.image.attached? %>
          <%= image_tag room.image %>
        <% else %>
          <%= image_tag 'default-image.png' %>
        <% end %>
      </td>
      <td><%= link_to"詳細", room %></td>
    </tr>
  <% end %>
</table>