<%= render "shared/error", obj: @user %>

<%= form_for @user do |f| %>
  <div class="field" >
    <%= f.label :avatar, "プロフィール画像" %><br />
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :introduction, "自己紹介" %><br />
    <%= f.text_area :introduction %>
  </div>

  <div class="actions">
    <%= f.submit"更新", class: "btn btn-primary" %>
  </div>

  <%= link_to"キャンセル", :back, class: "btn btn-secondary" %>
<% end %>